            android:name="com.example.rami.InvestiGate.InventoryActivity"
            android:label="@string/title_activity_inventory"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.example.rami.InvestiGate.ProfileActivity"
            android:label="@string/title_activity_profile"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.example.rami.InvestiGate.SolveActivity"
            android:label="@string/title_activity_solve"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.example.rami.InvestiGate.ItemActivity"
            android:label="@string/title_activity_item"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name="com.example.rami.InvestiGate.EndingActivity"
            android:label="@string/title_activity_ending"
            android:screenOrientation="portrait">
        </activity>
        <activity
