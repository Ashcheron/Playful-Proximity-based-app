<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ff272727"
    tools:context="com.example.rami.InvestiGate.SolveActivity">

    <TextView
        android:id="@+id/labelSuspect"
        style="@style/Investigate.TextViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Suspect"
        android:textSize="40dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/suspect"
        style="@style/Investigate.TextViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/labelSuspect"
        android:hint="Select Person"
        android:textSize="30dp"
        android:textStyle="italic"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/labelWeapon"
        style="@style/Investigate.TextViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/suspect"
        android:text="Murder weapon"
        android:textSize="40dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/weapon"
        style="@style/Investigate.TextViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/labelWeapon"
        android:hint="Select Weapon"
        android:textSize="30dp"
        android:textStyle="italic"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/labelLocation"
        style="@style/Investigate.TextViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/weapon"
        android:text="Location"
        android:textSize="40dp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/location"
        style="@style/Investigate.TextViews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/labelLocation"
        android:hint="Select Location"
        android:textSize="30dp"
        android:textStyle="italic"
        android:singleLine="true"/>

    <Button
        android:id="@+id/presentEvidence"
        style="@style/Investigate.Buttons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50px"
        android:layout_alignParentBottom="true"
        android:text="Present evidence"/>

</RelativeLayout>
