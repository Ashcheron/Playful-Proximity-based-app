<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:background="#ff272727"
    tools:context="com.example.rami.InvestiGate.MainMenuActivity">

    <Button
        android:id="@+id/profileButton"
        style="@style/Investigate.Buttons.MainMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profile"/>
    <Button
        android:id="@+id/inventoryButton"
        style="@style/Investigate.Buttons.MainMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/profileButton"
        android:text="Inventory"/>
    <Button
        android:id="@+id/solveButton"
        style="@style/Investigate.Buttons.MainMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/solver"
        android:layout_below="@id/inventoryButton"/>
    <Button
        android:id="@+id/startButton"
        style="@style/Investigate.Buttons.MainMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/solveButton"
        android:text="Start"/>
    <Button
        android:id="@+id/resetButton"
        style="@style/Investigate.Buttons.MainMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/startButton"
        android:text="Reset"/>


</RelativeLayout>
