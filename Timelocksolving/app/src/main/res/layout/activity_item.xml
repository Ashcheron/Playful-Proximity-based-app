<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rami.timelocksolving.ItemActivity">

    <ImageView
        android:id="@+id/detailedItemIcon"
        android:layout_width="200px"
        android:layout_height="200px"
        android:layout_margin="20px" />

    <TextView
        android:id="@+id/detailedItemLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:text="Item"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/detailedItemIcon"/>

    <TextView
        android:id="@+id/detailedItemDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:text="Description"
        android:textSize="20dp"
        android:layout_below="@id/detailedItemIcon"/>
    <TextView
        android:id="@+id/detailedItemTokens"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:text="Tokens"
        android:textSize="15dp"/>

</RelativeLayout>
