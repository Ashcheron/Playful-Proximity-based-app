<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.rami.timelocksolving.ProfileActivity">

    <ImageView
        android:id="@+id/itemIcon"
        android:layout_width="200px"
        android:layout_height="200px"
        android:src="@drawable/sample_0"/>

    <TextView
        android:id="@+id/playerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:text="Player Name"
        android:textSize="30dp"
        android:textStyle="bold"
        android:singleLine="true"
        android:layout_toRightOf="@id/itemIcon"/>

    <TextView
        android:id="@+id/biography"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:text="Biography"
        android:textSize="20dp"
        android:layout_below="@id/itemIcon"/>

    <EditText
        android:id="@+id/playerNameEdit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:hint="Player Name"
        android:textSize="30dp"
        android:textStyle="bold"
        android:singleLine="true"
        android:layout_toRightOf="@id/itemIcon"
        android:background="@android:color/transparent"/>
    <EditText
        android:id="@+id/biographyEdit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20px"
        android:hint="Biography"
        android:textSize="20dp"
        android:layout_below="@id/itemIcon"
        android:background="@android:color/transparent"/>


</RelativeLayout>
